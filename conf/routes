# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                   controllers.ConnexionController.index
POST    /                                   controllers.ConnexionController.handleConnexionForm
GET     /cluster/:host/:port                controllers.ClusterController.cluster(host: String, port: Int)
GET     /namespace/:host/:port/:name        controllers.NamespaceController.namespace(host: String, port: Int, name: String, set: Option[String])
POST    /namespace/host/port/name           controllers.NamespaceController.handleQueryForm(host: String, port: Int, name: String, set: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
